{
    "name": "seebaermichi/laravel-simple-file-model",
    "description": "This is a small package to allow to easy add file handling for several models in Laravel",
    "keywords": [
        "MichaelBecker",
        "laravel",
        "laravel-simple-file-model"
    ],
    "homepage": "https://github.com/seebaermichi/laravel-simple-file-model",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Becker",
            "email": "info@michael-becker-berlin.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "MichaelBecker\\SimpleFile\\": "src/",
            "MichaelBecker\\SimpleFile\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MichaelBecker\\SimpleFile\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-simple-file-model --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "MichaelBecker\\SimpleFile\\SimpleFileServiceProvider"
            ],
            "aliases": {
                "SimpleFile": "MichaelBecker\\SimpleFile\\Facades\\SimpleFile"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}